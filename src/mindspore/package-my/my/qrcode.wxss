/* package-my/my/qrcode.wxss */
.container {
    padding: 0 50rpx 0 40rpx;
}

.container .avatar {
    margin-top: 10rpx;
    width: 650rpx;
    height: 1312rpx;
}

.container .btn-box {
    width: 100%;
    height: 130rpx;
    padding: 20rpx 30rpx;
    border: 1px solid #F0F3F7;
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
}

.container .btn-box button {
    width: 330rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 20rpx;
    background-color: #FFFFFF;
    border: 1px solid #40ADFF;
    text-align: center;
    color: #40ADFF;
}

.container .btn-box .save {
    color: #FFFFFF;
    background: #40ADFF;
}